{% extends 'base.html.twig' %}

{% block title %}Stocks disponibles{% endblock %}

{% block body %}

{{ include('_partials/_menu.html.twig') }}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Stocks disponibles</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Description</th>
                <th scope="col" class="text-center">Référence</th>
                <th scope="col" class="text-center">Taille</th>
                <th scope="col" class="text-center">Quantité</th>
                <th scope="col" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.name }}</td>
                <td>{{ stock.description }}</td>
                <td>{{ stock.reference }}</td>
                <td>{{ stock.size }}</td>
                <td>{{ stock.qty }}</td>
                <td><a href="{{ path('product_detail', {id: stock.product_id}) }}">Détails</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" align="center">Pas de produits en stock disponibles</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
