{% extends 'base.html.twig' %}

{% block title %}Produits non disponibles en entrepot{% endblock %}

{% block body %}

{{ include('_partials/_menu.html.twig') }}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Produits non disponibles en entrepot</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Description</th>
                <th scope="col" class="text-center">Référence</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.reference }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Pas de produits pas en stock</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
